{
  "name": "basic-webpack-3-react-app-config",
  "version": "0.0.1",
  "description": "A basic webpack 3 and react config with jest for tests and instanbul for test coverage",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env BABEL_ENV=development webpack-dev-server --content-base build/ --config webpack-dev.config.babel.js",
    "prod": "cross-env BABEL_ENV=production webpack --config webpack-prod.config.babel.js",
    "test": "jest --config jest-test.js",
    "test:watch": "npm run test -- --watch",
    "coverage": "jest --config jest-coverage-config.js --coverage"
  },
  "author": "Murray Smart",
  "license": "UNLICENSED",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-fetch": "0.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.8.1",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "react-test-renderer": "^15.6.1",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "webpack": "^3.5.3",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.7.1"
  }
}
